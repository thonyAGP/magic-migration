{
  "name": "@magic-migration/factory",
  "version": "1.0.0",
  "description": "Reusable migration factory - extract legacy systems into modern web apps module by module",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "migration-factory": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest run --coverage --ui",
    "test:expression-coverage": "tsx scripts/verify-expression-coverage.ts --contract-dir ../../.openspec/migration/ADH --output-dir ../adh-web/src",
    "badge:expression-coverage": "tsx scripts/generate-coverage-badge.ts",
    "ci:expression-coverage": "pnpm test:expression-coverage --threshold 70 --json > coverage-report.json",
    "dashboard:patterns": "tsx scripts/generate-patterns-dashboard.ts",
    "hook:post-migration": "tsx scripts/post-migration-hook.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "chalk": "^5.4.1",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.0",
    "vitest": "^4.0.18"
  }
}
